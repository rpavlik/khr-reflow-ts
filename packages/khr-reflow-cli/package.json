{
  "name": "@ryan.pavlik/khr-reflow-cli",
  "version": "1.9.0",
  "description": "Command line tool for performing AsciiDoc reflow.",
  "types": "lib/reflow-bin.d.ts",
  "bin": {
    "khr-reflow": "lib/reflow-bin.js"
  },
  "scripts": {
    "prepare": "yarn run build",
    "reflow": "ts-node src/reflow-bin.ts",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext ts"
  },
  "author": "Ryan Pavlik",
  "license": "Apache-2.0",
  "dependencies": {
    "@ryan.pavlik/khr-reflow": "file:../khr-reflow",
    "minimist": "^1.2.5",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.10.2",
    "@types/yargs": "^16.0.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "prettier": "^2.4.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.3"
  }
}
